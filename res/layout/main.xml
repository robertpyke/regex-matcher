<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/mainScrollView">
<TableLayout 
    	android:layout_width="fill_parent" 
		android:layout_height="fill_parent">




<LinearLayout android:id="@+id/LinearLayout01" android:layout_width="wrap_content" android:layout_height="wrap_content"><TableLayout android:id="@+id/TableLayout01" android:layout_height="wrap_content" android:layout_width="fill_parent" android:stretchColumns="1"><TableRow android:id="@+id/TableRow01" android:layout_height="wrap_content" android:layout_width="fill_parent"><TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/InputRegexPrompt" android:text="Regex:" android:layout_marginRight="5px"></TextView><EditText android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/InputRegex" android:singleLine="true"></EditText>

</TableRow><TableRow android:id="@+id/TableRow02" android:layout_width="wrap_content" android:layout_height="wrap_content"><TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/InputCheckPrompt" android:text="Text to Check:" android:layout_marginRight="5px"></TextView><EditText android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/InputCheck" android:singleLine="true"></EditText></TableRow>
</TableLayout>

</LinearLayout><TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/OutputPrompt" android:text="Matches:"  android:layout_marginBottom="3px" android:layout_margin="3px"></TextView>
<TextView android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/Output" android:paddingBottom="5px" android:paddingLeft="5px" android:paddingRight="5px" android:paddingTop="5px"  android:layout_marginBottom="3px"></TextView>
<Button android:id="@+id/Button01" android:layout_height="wrap_content" android:text="Check Regex" android:layout_width="fill_parent" ></Button>








</TableLayout>
</ScrollView>
